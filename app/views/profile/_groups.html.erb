<%- unless groups.empty? -%>
  <%- if title -%>
  	 <h3><%= title %> <span class="meta"><%= link_to "建立群組", new_group_path %></span></h3>
  <%- end -%>

  <%- groups.each do |group| -%>
    <div class="group-small">
      <%= image_link(group, :image_options => { :class => "photo fn" },
                            :link_options =>  { :class => "url" }) %>
      <%= link_to truncate_html(group.name, 10), group_path(group) %>
    </div>
  <%- end -%>
  <div class="clear"></div>
  
  <% if link %>
    <span class="left">
      <%= link_to "#{groups.length} 個群組", 
          link == "admin" ? admin_groups_profile_path(@user) : groups_profile_path(@user) %>
    </span>
    <span class="right">
      <%= link_to "顯示全部", 
          link == "admin" ? admin_groups_profile_path(@user) : groups_profile_path(@user) %>
    </span>
  <% end %>
<%- end -%>