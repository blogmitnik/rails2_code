<div id="note_<%= note.id %>" class="entry">
	<h2><%= link_to(sanitize(textilize(note.title)), profile_note_path(@user, note)) -%></h2>
	<div class="standard-format">
	  <%= process_body_content(note) %>
	</div>
  <p class="post-meta"><%= "#{note.wall_comments.size} 則回覆" -%> | 
  <% if note.created_at > Time.now.utc-24.hours%>
	  張貼於 <%= time_ago_in_words(note.created_at).sub(/about /, '') -%> 前
  <% else %>
    <%= note.created_at.strftime('%y年%m月%d日 %H:%M')%>
  <% end %></p>
</div>
