<% user ||= @user %>
<div id="profile_edit">
<div>學歷和工作經驗
	<% if is_logged_in? and user.id == logged_in_user.id %>
		(<%= link_to '編輯/更改', edit_academic_path(logged_in_user) %>)
	<% end %>
</div>
	<div class="hidden"></div>
	<% unless user.academic.school.blank? %>
		<% if user.academic.dept %><div><strong><%= user.academic.dept %>：</strong><% end %>
			<%= user.academic.school %></div>
	<% end %>
	<% unless user.academic.school_year.blank? %><div><strong>畢業年份: </strong><%= user.academic.school_year %></div><% end %>
	<% unless user.academic.major.blank? %><div><strong>目前主修: </strong><%= user.academic.major %></div><% end %>
	
	<% unless user.academic.high_school.blank? %><div><strong>高中職 / 五專：</strong><%= user.academic.high_school %></div><% end %>
	<% unless user.academic.high_school_year.blank? %><div><strong>畢業年份: </strong><%= user.academic.high_school_year %></div><% end %>
	
	<% unless user.academic.employer.blank? %><div><strong>雇主: </strong><%= user.academic.employer %></div><% end %>
	<% unless user.academic.position.blank? %><div><strong>職位: </strong><%= user.academic.position %></div><% end %>
	<% unless user.academic.brief.blank? %><div><strong>工作簡述: </strong><%= user.academic.brief %></div><% end %>
</div>