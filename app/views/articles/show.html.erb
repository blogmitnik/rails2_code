<h2><%= @article.title %></h2>

<% if @article.category %>
	<p class="category">
		分類: '<%= link_to @article.category.name, category_articles_path(@article.category) %>'
	</p>
<% end %>

<p>
	<%= @article.created_at.to_s(:short) %><br>
	<%= textilize(@article.body) %>
</p>

<p><%= link_to '返回文章列表', articles_url %></p>