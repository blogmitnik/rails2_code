<%= javascript_include_tag 'jquery', 'prototype', 'effects' %>

<%- column_div :type => :primary do -%>
	<h3><%= @group.name %>的新聞訊息</h3>
	<%= link_to "返回群組", group_path(@group) %> |
	<%= link_to "新聞訊息", group_news_index_path(@group) %>
	<% if manager? -%>
		| <%= link_to "編輯新聞", edit_group_news_path(@group, @news_item) -%>
		| <%= link_to "刪除文章", group_news_path(@group, @news_item), :method => :delete -%>
	<%- end -%>
	<div class="group-news-item">
		<%= render :partial => 'news/news_item', :object => @news_item -%>
	</div>
<%- end -%>

<%- column_div :type => :secondary do -%>
<h3>群組簡介</h3>
	<div style="text-align:center">
		<%= image_link @group, :image => :main_photo, :title => "#{@group.name}" %>
	</div>
	<%= display @group.description %>
   <%= render :partial => "groups/category" %>
<%- end -%>