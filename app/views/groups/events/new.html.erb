<%- column_div :type => :primary do -%>
	<h3>建立群組活動</h3>
	<%= render :partial => 'groups/group_nav', :locals => {:group => @group} %>
	<% custom_form_for @event, :url => group_events_path(@group), :html => { :method => :post, :multipart => true, :class => "box no_top" } do |f| -%>
		<%= render :partial => 'events/event_form', :locals => {:f => f, :show_photo_upload => true } %>
	<% end %>
<%- end -%>

<%- column_div :type => :secondary do -%>
<h3>群組簡介</h3>
	<div style="text-align:center">
		<%= image_link @group, :image => :main_photo, :title => "#{@group.name}" %>
	</div>
	<%= display @group.description %>
   <%= render :partial => "groups/category" %>
<%- end -%>
