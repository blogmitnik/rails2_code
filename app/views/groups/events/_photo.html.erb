<div class="left image-wrapper">
	<div class="image-border">
		<div>
		<%= link_to image_tag(photo.public_filename('thumb')), 
						group_event_photo_path(photo.owner.eventable, photo.owner, photo), 
						:title => "#{photo.body}" %>
		</div>
	</div>
	<div style="width:160px;text-align:center;">
	<%= h(photo.body) + '<br/>' if photo.body && photo.body.length > 0 %>
	<%= link_to "預覽", '#gpu' + photo_id(photo), :rel => 'facebox' %>
	<% if is_me?(photo.creator) || is_me?(photo.owner.user) || manager? %>
		<%= link_to "刪除", group_event_photo_path(photo.owner.eventable, photo.owner, photo), 
								:method => :delete, 
								:confirm => "你確定要刪除這張相片嗎？" %>
	<% end %>
	</div>
</div>

<div style="display: none;" id="gpu<%= photo_id(photo) -%>">
  <%= image_tag photo.public_filename %> 
  <div class="gpuTitle"><%= photo.label %></div>
</div>