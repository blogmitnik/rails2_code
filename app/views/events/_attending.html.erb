<div id="attendees_for_<%=event.dom_id%>">有<%= event.event_attendees_count-1 || 0 %>位使用者將出席活動</div>
<% remote_form_for :event_attendee, :url => event_attendees_path, :format => 'js', :html => {:id => "attend_#{event.dom_id}"} do |f| %>
	<%= hidden_field_tag :event_id, event.id %>
	<%= f.submit "出席這項活動", :id => "#{event.dom_id}_attend-button" -%>
	<div id="<%=event.dom_id%>_loader" style="display:none;">
		<img src="/images/loader.gif" alt="progress bar" float:left> 
		<small>請稍後...</small>
	</div>
<% end %>

<script type="text/javascript" language="JavaScript">
jQuery(document).ready(function()
{
    jQuery("#attend_<%=event.dom_id%>").submit(function()
    {
        jQuery("#<%=event.dom_id%>_attend-button").hide();
        jQuery("#<%=event.dom_id%>_loader").show();
    });
});
</script>