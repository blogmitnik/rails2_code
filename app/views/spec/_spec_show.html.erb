<% user ||= @user %>
<div id="profile_edit">
<div>個人資訊
	<% if is_logged_in? and user.id == logged_in_user.id %>
		(<%= link_to '編輯/更改', edit_spec_path(logged_in_user) %>)
	<% end %>
</div>
<div class="hidden"></div>
<% unless @user.spec.nil? %>
	<% unless user.spec.activity.blank? %><div><strong>休閒活動: </strong><%= user.spec.activity %></div><% end %>
	<% unless user.spec.interest.blank? %><div><strong>興趣: </strong><%= user.spec.interest %></div><% end %>
	<% unless user.spec.music.blank? %><div><strong>喜愛的音樂: </strong><%= user.spec.music %></div><% end %>
	<% unless user.spec.tv.blank? %><div><strong>最喜愛的電視節目: </strong><%= user.spec.tv %></div><% end %>
	<% unless user.spec.movie.blank? %><div><strong>喜愛的電影: </strong><%= user.spec.movie %></div><% end %>
	<% unless user.spec.book.blank? %><div><strong>喜愛的書籍: </strong><%= user.spec.book %></div><% end %>
	<% unless user.spec.maxim.blank? %><div><strong>座右銘: </strong><%= user.spec.maxim %></div><% end %>
	<% unless user.spec.about_me.blank? %><div><strong>關於我: </strong><%= user.spec.about_me %></div><% end %>
<% end %>
</div>