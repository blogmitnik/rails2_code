</div>
<% end -%>

<script type="text/javascript" language="JavaScript">
jQuery(document).ready(function()
{
    jQuery("#signup").click(function()
    {
        jQuery("#signup").hide();
        jQuery("#progress-bar").show();
    });
});
</script>