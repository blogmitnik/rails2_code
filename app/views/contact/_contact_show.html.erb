<% user ||= @user %>
<div id="profile_edit">
<div>聯絡資料
	<% if is_logged_in? and user.id == logged_in_user.id %>
		(<%= link_to '編輯/更改', edit_contact_path(logged_in_user) %>)
	<% end %>
</div>
<div class="hidden"></div>
<% unless @user.contact.nil? %>
	<% unless user.email.blank? %><div><strong>電子郵件: </strong><%= user.email %></div><% end %>
	<% unless user.contact.city.blank? %><div><strong>現居城市: </strong><%= user.contact.city %></div><% end %>
	<% unless user.contact.state.blank? %><div><strong>所在城鎮: </strong><%= user.contact.state %></div><% end %>
	<% unless user.contact.zipcode.blank? %><div><strong>郵遞區號: </strong><%= user.contact.zipcode %></div><% end %>
	<% unless user.contact.msn_account.blank? %><div><strong>MSN: </strong>
		<a href="msn:<%= h user.contact.msn_account %>"><%=h user.contact.msn_account %></a></div><% end %>
	<% unless user.contact.ichat_account.blank? %><div><strong>iChat: </strong>
		<a href="ichat:<%= h user.contact.ichat_account %>"><%=h user.contact.ichat_account %></a></div><% end %>
	<% unless user.contact.gtalk_account.blank? %><div><strong>GTalk: </strong>
		<a href="xmpp:<%= h user.contact.gtalk_account %>"><%=h user.contact.gtalk_account %></a></div><% end %>
	<% unless user.contact.aim_account.blank? %><div><strong>AIM: </strong>
		<a href="aim:goim?screenname=<%= h user.contact.aim_account %>"><%= h user.contact.aim_account %></a></div><% end %>
	<% unless user.contact.website.blank? %><div><strong>個人網站: </strong>
		<%= link_to h(user.contact.website), h(user.contact.website) %></div><% end %>
<% end %>
</div>