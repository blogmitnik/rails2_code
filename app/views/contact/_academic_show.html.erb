<% user ||= @user %>
<div id="profile_edit">
<div>學歷和工作經驗
	<% if is_logged_in? and user.id == logged_in_user.id %>
		(<%= link_to '編輯/更改', edit_contact_path(logged_in_user) %>)
	<% end %>
</div>
<div class="hidden"></div>
<% unless @user.contact.nil? %>
	<% unless user.contact.school.blank? %>
		<% if user.contact.dept %><div><strong><%= user.contact.dept %>：</strong><% end %>
			<%= user.contact.school %></div>
	<% end %>
	<% unless user.contact.school_year.blank? %><div><strong>畢業年份: </strong><%= user.contact.school_year %></div><% end %>
	<% unless user.contact.major.blank? %><div><strong>目前主修: </strong><%= user.contact.major %></div><% end %>
	
	<% unless user.contact.high_school.blank? %><div><strong>高中職 / 五專：</strong><%= user.contact.high_school %></div><% end %>
	<% unless user.contact.high_school_year.blank? %><div><strong>畢業年份: </strong><%= user.contact.high_school_year %></div><% end %>
	
	<% unless user.contact.employer.blank? %><div><strong>雇主: </strong><%= user.contact.employer %></div><% end %>
	<% unless user.contact.position.blank? %><div><strong>職位: </strong><%= user.contact.position %></div><% end %>
	<% unless user.contact.brief.blank? %><div><strong>工作簡述: </strong><%= user.contact.brief %></div><% end %>
<% end %>
</div>