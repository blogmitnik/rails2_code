<h2>論壇: <%= @forum.name %></h2>

<h3>討論主題</h3>
<p>
	<% if is_logged_in? -%>
		<%= link_to '新增討論主題', new_mobile_topic_path(:forum_id => @forum) -%>
	<% else -%>
		<%= link_to '登入以新增討論主題', mobile_login_url -%>
	<% end %>
</p>

<% if @topics_pages.page_count > 1 %>
<p class="pagination">頁次: <strong>
	<%= pagination_links @topics_pages, :params => params %>
</strong></p>
<% end %>

<ul>
	<% @topics.each do |topic| -%>
	<li><%= link_to topic.name, mobile_posts_path(:forum_id => @forum, 
			:topic_id => topic) -%> 
	(<%= topic.posts_count -%>個回覆)</li>
	<% end %>
</ul>
