<h2><%= @user.username %></h2>
<p><%=h @user.profile %></p>

<h3>網誌文章</h3>
<ul id="entries">
	<% @entries.each do |entry| -%>
	<li><%= link_to entry.title, mobile_entry_path(:user_id => @user, :id => entry) %>
	<% end %>
</ul>
<p>
	<%= link_to "瀏覽 #{@user.username} 的全部網誌文章", 
		mobile_entries_path(:user_id => @user) %>
</p>

<h3>圖片</h3>
<ul id="photos">
	<% @photos.each do |photo| -%>
	<li>
		<%= link_to image_tag(photo.public_filename('tiny')), 
					mobile_photo_path(:user_id => photo.user, :id => photo) %>
	</li>
	<% end %>
</ul>
<p>
	<%= link_to "瀏覽 #{@user.username} 的全部圖片", 
				mobile_photos_path(:user_id => @user) %>
</p>