<%- column_div :type => :primary do -%>
<h3>建立討論區</h3>
<%= error_messages_for :forum %>
<div id="forum-container">
  <div class="crumbs">
  	<%= link_to "回到討論區", forums_path %> <span class="arrow">&rarr;</span>
  </div>
  <h4>建立討論區</h4>
  <% form_for :forum, :url => forums_path do |f| -%>
    <%= render :partial => "form", :object => f %>
    <%= submit_tag '建立討論區', :or => link_to('取消', forums_path) %>
  <% end -%>
</div>
<% end -%>